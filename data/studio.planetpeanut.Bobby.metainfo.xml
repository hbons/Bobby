<?xml version="1.0" encoding="UTF-8" ?>
<component type="desktop">
    <name>Bobby</name>
    <summary>Browse SQLite files</summary>
    <id>studio.planetpeanut.Bobby</id>

    <launchable type="desktop-id">studio.planetpeanut.Bobby.desktop</launchable>
    <provides>
        <binary>bobby</binary>
        <mimetype>application/x-sqlite3</mimetype>
        <mimetype>application/vnd.sqlite3</mimetype>
    </provides>

    <project_group>Planet Peanut Studio</project_group>
    <project_license>GPL-3.0-or-later</project_license>

    <url type="homepage">https://planetpeanut.studio/bobby</url>
    <url type="bugtracker">https://github.com/hbons/Bobby/issues</url>
    <url type="donation">https://github.com/sponsors/hbons</url>
    <url type="vcs-browser">https://github.com/hbons/Bobby</url>

    <developer id="studio.planetpeanut">
        <name>Hylke Bons</name>
        <email>hello_AT_planetpeanut.studio</email>
        <url type="homepage">https://planetpeanut.studio</url>
    </developer>

    <branding>
        <color type="primary" scheme_preference="light">#A6D7ED</color>
        <color type="primary" scheme_preference="dark">#084B82</color>
    </branding>

    <screenshots>
        <screenshot type="default">
            <image>
                https://raw.githubusercontent.com/hbons/Bobby/main/data/screenshots/screenshot-default.png
            </image>
            <caption>Browse SQLite files</caption>
        </screenshot>
        <screenshot>
            <image>
                https://raw.githubusercontent.com/hbons/Bobby/main/data/screenshots/screenshot-extra-1.png
